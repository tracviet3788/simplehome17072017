  body
    //
      **********************************************************************************************************************************************************
      MAIN CONTENT
      ***********************************************************************************************************************************************************
    #login-page
      .container
        form.form-login(method='post',action='')
          h2.form-login-heading sign in now
          | &#x9;&#x9;        
          .login-wrap
            input.form-control(type='text', placeholder='User ID', autofocus='',name='username')
            | &#x9;&#x9;            
            br
            | &#x9;&#x9;            
            input.form-control(type='password', placeholder='Password',name='password')
            | &#x9;&#x9;            
            label.checkbox
              span.pull-right
                a(data-toggle='modal', href='login.html#myModal')  Forgot Password?
            | &#x9;&#x9;            
            button.btn.btn-theme.btn-block(href='index.html', type='submit')
              i.fa.fa-lock
              |  SIGN IN
            | &#x9;&#x9;            
            hr
            | &#x9;&#x9;            
          // Modal
          #myModal.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1')
            .modal-dialog
              .modal-content
                .modal-header
                  button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
                  | &#x9;&#x9;                          
                  h4.modal-title Forgot Password ?
                | &#x9;&#x9;                      
                .modal-body
                  p Enter your e-mail address below to reset your password.
                  | &#x9;&#x9;                          
                  input.form-control.placeholder-no-fix(type='text', name='email', placeholder='Email', autocomplete='off')
                | &#x9;&#x9;                      
                .modal-footer
                  button.btn.btn-default(data-dismiss='modal', type='button') Cancel
                  | &#x9;&#x9;                          
                  button.btn.btn-theme(type='button') Submit
          // modal
    // js placed at the end of the document so the pages load faster
    script(src='/themes/js/jquery.js')
    |     
    script(src='/themes/js/bootstrap.min.js')
