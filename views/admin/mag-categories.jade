extends ../layouts/admin.jade
block contents
  html
  body
    h1 Quản lý ngành hàng
    table.table.table-bordered
      thead
        tr
          th Ngành hàng cha
          |           
          th Ngành hàng con
          | 
          th Trạng thái
          |          
          th Thao tác
      |       
      tbody
        - each cate in category
          tr
            td #{cate.catename}
            |           
            td 
              table.table.table-striped
                - each subcate in cate.subcategory
                  tr
                    td #{subcate.subcatename}
                    td 
                      a(href="/admin/edit-subcate/#{subcate.subcateslug}")
                        button(type="button" class="btn btn-xs btn-warning") Cập nhật
            |            
            -if(cate.status == 0){
            td Tắt
            -}
            -if(cate.status == 1){
            td Hiện
            -} 
            -if(cate.status == 2){
            td Trang chủ
            -}
            td 
              a(href="/admin/edit-cate/#{cate.cateslug}")
                button(type="button" class="btn btn-sm btn-danger") Cập nhật
          |         
        
